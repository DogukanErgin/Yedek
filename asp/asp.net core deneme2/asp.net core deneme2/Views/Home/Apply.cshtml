@model Student
@{ 
    Layout = null;
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Apply</title>
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center" >
            <h4>Apply the course</h4>
        </div>
        <div class="panel-body">
            <form method="post" asp-action="Apply">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Email">email</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Phone">phone</label>
                    <input asp-for="Phone" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="WillAttend">willattend</label>
                    <select asp-for="WillAttend" class="form-control">
                        <option value="">Select an option</option>
                        <option value="true">yes, i will attend</option>
                        <option value="no">no, i will not attend</option>
                    </select>
                </div>
              <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
    


</body>

</html>